@model IEnumerable<StudyPortal.Models.Mvc>

@{
    ViewBag.Title = "Introduction";
}

<h2>Introduction</h2>

                      <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                      <script type="text/javascript">
    $(document).ready(function () {
        //$(".flip").click(function () {
